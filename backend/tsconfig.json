{
    "compilerOptions": {
        "target": "es6",
        "baseUrl": ".",
        "module": "commonjs",
        "removeComments": true,
        "strict": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "inlineSourceMap": false,
        "types": [
            "node"
        ],
        "paths": {
            "@architect/shared/*": ["src/shared/*"]
        },
        "esModuleInterop": true,
        "strictPropertyInitialization": false
    },
    "include": [
        "src/"  
     ],
    "exclude": [
        "node_modules",
    ],
}